                a.contact__phone-link(href="tel:+18036913667") 1 (803) 691 3667
        div.contact__form-part
            form.contact__form(action="" method="post" name="contactForm")
                div.contact__entry-field
                    label.contact__label(for="name") * Name
                    input.contact__input(type="text" id="name" name="name" required)
                div.contact__entry-field
                    label.contact__label(for="email") * Email
                    input.contact__input(type="text" id="email" name="email" required)
                div.contact__entry-field
                    label.contact__label(for="company") Company
                    input.contact__input(type="text" id="company" name="company")
                div.contact__entry-field
                    label.contact__label(for="phone") Phone
                    input.contact__input(type="text" id="phone" name="phone")
                div.contact__message
                    label.contact__label(for="message") * Message
                    textarea.contact__textarea(id="message" name="message" required)
                div.contact__send
                    input.contact__send-button(type="button" value="Send request")